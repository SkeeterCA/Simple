<p>Type your text:</p>
<textarea id="inputText" placeholder="Type Here"></textarea>

<h3>Output:</h3>
<div id="output"></div>

<button onclick="resetAll()">Reset</button>

<script>
function replaceText() {
  var text = document.getElementById("inputText").value;
  var inputs = document.querySelectorAll(".replace");

  // Build a map of replacements first
  var map = {};
  inputs.forEach(input => {
    var from = input.dataset.from;
    var to = input.value || from; // use original if blank
    map[from] = to;
    map[from.toUpperCase()] = to.toUpperCase(); // also handle uppercase letters
  });

  // Replace each character safely
  var result = text.split("").map(char => map[char] || char).join("");

  document.getElementById("output").textContent = result;
}

// Live updates
document.getElementById("inputText").oninput = replaceText;
document.querySelectorAll(".replace").forEach(input => {
  input.oninput = replaceText;
});

// Reset everything
function resetAll() {
  document.getElementById("inputText").value = "";
  document.getElementById("output").textContent = "";
  document.querySelectorAll(".replace").forEach(input => {
    input.value = "";
  });
}
</script>


